{
	"name": "pandasuite-studio",
	"productName": "PandaSuite Studio",
	"version": "1.3.9",
	"description": "The best studio ever",
	"license": "MIT",
	"repository": "beingenious/studio",
	"author": {
		"name": "PandaSuite",
		"email": "ilove@pandasuite.com",
		"url": "https://pandasuite.com"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "eslint . --ext .js",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --macos --linux --windows --x64 --ia32",
		"release": "np"
	},
	"dependencies": {
		"@bugsnag/js": "^7.6.0",
		"dotenv": "^8.1.0",
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-dl": "^1.14.0",
		"electron-serve": "^0.4.0",
		"electron-store": "^4.0.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.12.0",
		"lodash": "^4.17.15"
	},
	"devDependencies": {
		"@types/lodash": "^4.14.138",
		"babel-eslint": "^10.0.3",
		"electron": "^8.1.1",
		"electron-builder": "22.8.1",
		"electron-notarize": "^0.1.1",
		"eslint": "^5.9.0",
		"eslint-config-airbnb": "^18.0.1",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-react": "^7.14.3",
		"eslint-plugin-react-hooks": "^1.7.0",
		"np": "^5.1.0"
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.pandasuite.studio",
		"protocols": {
			"name": "panda-deep-linking",
			"schemes": [
				"pandastudio"
			]
		},
		"mac": {
			"hardenedRuntime": true,
			"gatekeeperAssess": false,
			"entitlements": "build/entitlements.mac.plist",
			"entitlementsInherit": "build/entitlements.mac.plist",
			"category": "public.app-category.productivity",
			"darkModeSupport": true,
			"extraResources": [
				"./static/flash_player_ppapi/PepperFlashPlayer.plugin/**/*",
				"./static/pdfjs/**/*"
			]
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Publishing",
			"extraResources": [
				"./static/flash_player_ppapi/*.so",
				"./static/pdfjs/**/*"
			]
		},
		"win": {
			"verifyUpdateCodeSignature": false,
			"extraResources": [
				"./static/flash_player_ppapi/*.dll",
				"./static/pdfjs/**/*"
			]
		},
		"afterSign": "scripts/notarize.js"
	}
}
